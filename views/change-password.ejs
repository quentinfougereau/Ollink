<!doctype html>
<html lang="fr">
<head>
    <% include ./partials/head %>
    <title>Changer le mot de passe | Ollink - Gestionnaire de liens</title>
</head>
<body>
    <% include ./partials/header %>

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1 class="text-center">Ollink - Gestionnaire de liens</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Changer le mot de passe</h2>
            </div>
        </div>

        <% if (typeof msg !== 'undefined' && msg != "") { %>
            <div class="row">
                <div class="col-md-12">
                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade in" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <p><a href="/home"><button type="button" class="btn btn-success"><span class="glyphicon glyphicon-home"></span></button></a>&nbsp;&nbsp;<%= msg %></p>
                        </div>
                    <% } else { %>
                        <div class="alert alert-danger alert-dismissible fade in" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <p><%= msg %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>

        <div class="row">
            <div class="col-md-12">
                <form action="/changePassword" method="post">
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" id="password" placeholder="Mot de passe" name="password" data-validation="length" data-validation-length="min8"/>
                    </div>
                    <div class="form-group">
                        <label for="new-password">Nouveau mot de passe</label>
                        <input type="password" class="form-control" id="new-password" placeholder="Nouveau mot de passe" name="newPassword"  data-validation="length" data-validation-length="min8"/>
                    </div>
                    <div class="form-group">
                        <label for="confirm-new-password">Nouveau mot de passe</label>
                        <input type="password" class="form-control" id="confirm-new-password" placeholder="Confirmer le nouveau mot de passe" name="confirmNewPassword"  data-validation="confirmation" data-validation-confirm="newPassword"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Se connecter"/>
                    </div>
                </form>
            </div>
        </div>

        <input type="hidden" id="variable-user-email" name="" value="<%= user_email %>">

    </div>
    <% include ./partials/footer %>
    <script type="text/javascript" src="/public/js/change-password.js"></script>
</body>
</html>